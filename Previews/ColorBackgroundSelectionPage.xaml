<Page x:Class="AdvancedWindowsAppearence.Previews.ColorBackgroundSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdvancedWindowsAppearence.Previews"
      xmlns:converters="clr-namespace:AdvancedWindowsAppearence.Converters"
      mc:Ignorable="d" 
      Title="ColorBackgroundSelectionPage">
    <Page.Resources>
        <ResourceDictionary>
            <converters:BrushToColorConverter x:Key="brushToColor" />
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel Margin="5">
        <Viewbox IsEnabled="False">
            <Rectangle Width="160" Height="90" Fill="{Binding BackgroundColor.ItemColor, Converter={StaticResource brushToColor}}" HorizontalAlignment="Left"/>
        </Viewbox>
        <Button x:Name="ChangeBgColorButton" MinWidth="200" Style="{DynamicResource SystemButton}" HorizontalAlignment="Right" Click="ChangeBgColorButton_Click" >Change background color</Button>
    </StackPanel>
</Page>
